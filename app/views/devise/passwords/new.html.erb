<div class="container vh-100 pt-5">
  <div class="row justify-content-center">
    <div class="grid-item col-md-9 col-lg-6">
      <%= render 'shared/widget', title: "Forgot your password?" do %>
        <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
          <%= f.error_notification %>

          <div class="form-inputs">
            <%= f.input :email,
                        required: true,
                        autofocus: true,
                        input_html: { autocomplete: "email" } %>
          </div>

          <div class="form-actions">
            <button type="submit" name="commit" value="Reset password" class="button large mx-auto"><i class="fas fa-sign-in-alt mr-2"></i>Reset password</button>
          </div>
        <% end %>

      <% end %>
    </div>
  </div>
  <div class="mx-auto text-center">
    <%= render "devise/shared/links" %>
  </div>
</div>
