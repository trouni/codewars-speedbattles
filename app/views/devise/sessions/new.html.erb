<div class="container vh-100 pt-5">
  <div class="text-center">
    Don't have a SpeedBattles account yet? <%= link_to "Sign up", new_registration_path(resource_name) %>
  </div>
  <div class="row justify-content-center">
    <div class="grid-item col-md-9 col-lg-6">
      <%= render 'shared/widget', title: "Log in" do %>
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%#= f.input :email,
          required: false,
          autofocus: true,
          input_html: { autocomplete: "email" } %>
          <%= f.input :username,
          required: false,
          autofocus: true %>
          <%= f.input :password,
          required: false,
          input_html: { autocomplete: "current-password" } %>
          <%= f.input :remember_me, validate: false, as: :boolean if devise_mapping.rememberable? %>
        </div>

        <div class="form-actions d-flex justify-content-center">
          <button type="submit" name="commit" value="Log in" class="button large mx-auto"><i class="fas fa-sign-in-alt mr-2"></i>Log in</button>
        </div>
        <p class="text-center mb-0"><%= link_to "Forgot your password?", new_password_path(resource_name) %></p>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
